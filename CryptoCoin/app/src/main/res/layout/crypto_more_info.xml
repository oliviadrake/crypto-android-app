<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_layout">

    <TextView
        android:id="@+id/moreInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_extrabold"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textColor="#878686"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/moreInfoSymbol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_bold"
        android:paddingLeft="15dp"
        android:textColor="#878686"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/moreInfoPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_bold"
        android:paddingRight="15dp"
        android:textAlignment="textEnd"
        android:textColor="#878686"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/moreInfoDPercentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_bold"
        android:paddingRight="15dp"
        android:textAlignment="textEnd"
        android:textColor="#878686"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/moreInfoHPercentage"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:fontFamily="@font/barlow_bold"
        android:paddingRight="15dp"
        android:textAlignment="textEnd"
        android:textColor="#878686"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="9dp">

        <TextView
            android:id="@+id/convert"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/barlow_bold"
            android:text="Convert To USD "
            android:textAlignment="textEnd"
            android:textColor="#878686"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/text_entry"
            android:layout_width="115dp"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/barlow_extrabold"
            android:onClick="currencyConvert"
            android:text="@string/convert" />

        <TextView
            android:id="@+id/convert_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/barlow_bold"
            android:gravity="center"
            android:textColor="#878686"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_extrabold"
        android:onClick="onClickShareTextButton"
        android:text="@string/share_daily_roundup" />

    <TextView
        android:id="@+id/random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>